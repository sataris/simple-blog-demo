    "require": {
        "php": "8.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "fakerphp/faker": "^1.23"
    },
    "authors": [
        {
            "name": "Aris Abramian",
            "email": "aris.abramian@gmail.com"
        }
